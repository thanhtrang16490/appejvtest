# API Environment Configuration
# Copy to .env and fill in your values

# Environment
NODE_ENV=development

# Server Configuration
PORT=8081
HOST=0.0.0.0

# Supabase
SUPABASE_URL=https://mrcmratcnlsoxctsbalt.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# CORS Origins
# Local Development
CORS_ORIGINS_LOCAL=http://localhost:3000,http://localhost:4321

# Production
CORS_ORIGINS_PROD=https://app.appejv.app,https://appejv.app

# Use this in code to switch between local and prod
CORS_ORIGINS=${CORS_ORIGINS_LOCAL}

# JWT Configuration
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=24h

# Database
DB_MAX_CONNECTIONS=10
DB_TIMEOUT=30s

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
