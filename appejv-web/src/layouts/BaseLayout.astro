---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
  keywords?: string[]
  ogImage?: string
  canonical?: string
}

const { 
  title, 
  description = 'APPE JV chuyên sản xuất và cung cấp thức ăn chăn nuôi chất lượng cao cho heo, gia cầm và thủy sản. Thành lập từ 2008, ứng dụng công nghệ tiên tiến, xuất khẩu sang Đông Nam Á và Châu Âu.',
  keywords = [
    'thức ăn chăn nuôi',
    'thức ăn heo',
    'thức ăn gia cầm',
    'thức ăn thủy sản',
    'APPE JV',
    'APPE Việt Nam',
    'pig feed',
    'poultry feed',
    'fish feed',
    'chăn nuôi',
    'thủy sản',
    'Hà Nam',
    'thức ăn chất lượng cao'
  ],
  ogImage = '/og-image.png',
  canonical
} = Astro.props

const APP_URL = import.meta.env.PUBLIC_APP_URL || 'http://localhost:3000'
const SITE_URL = Astro.url.origin
const currentUrl = canonical || Astro.url.pathname
const fullUrl = `${SITE_URL}${currentUrl}`
const ogImageUrl = `${SITE_URL}${ogImage}`

// Structured Data - Organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "APPE JV Việt Nam",
  "alternateName": "Công ty Cổ phần APPE JV Việt Nam",
  "url": SITE_URL,
  "logo": `${SITE_URL}/appejv-logo.png`,
  "description": description,
  "foundingDate": "2008",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Km 50 Quốc lộ 1A, Xã Tiên Tân",
    "addressLocality": "Phủ Lý",
    "addressRegion": "Hà Nam",
    "addressCountry": "VN"
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+84-3513-595-202",
    "contactType": "customer service",
    "areaServed": "VN",
    "availableLanguage": ["vi", "en"]
  },
  "sameAs": [
    "https://appe.com.vn"
  ]
}

// Structured Data - Website
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "APPE JV Việt Nam",
  "url": SITE_URL,
  "description": description,
  "publisher": {
    "@type": "Organization",
    "name": "APPE JV Việt Nam",
    "logo": {
      "@type": "ImageObject",
      "url": `${SITE_URL}/appejv-logo.png`
    }
  }
}
