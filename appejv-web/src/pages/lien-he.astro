---
import BaseLayout from '../layouts/BaseLayout.astro'

const seoTitle = "Liên hệ - APPE JV Việt Nam | Tư vấn thức ăn chăn nuôi"
const seoDescription = "Liên hệ APPE JV để được tư vấn và hỗ trợ về thức ăn chăn nuôi. Hotline: 0351 3595 202/203. Email: info@appe.com.vn. Địa chỉ: Km 50 QL1A, Phủ Lý, Hà Nam."
const seoKeywords = [
  "liên hệ APPE",
  "tư vấn thức ăn chăn nuôi",
  "hotline APPE",
  "địa chỉ APPE Hà Nam",
  "email APPE",
  "hỗ trợ khách hàng",
  "đặt hàng thức ăn chăn nuôi"
]
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical="/lien-he"
>
  <!-- Hero Section - Apple Style -->
  <section class="pt-24 md:pt-32 pb-16 md:pb-20 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-semibold text-gray-900 mb-4 tracking-tight leading-tight">
          Liên hệ với chúng tôi
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-600 font-light max-w-2xl mx-auto">
          Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Methods - Clean Grid -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        <!-- Phone -->
        <a 
          href="tel:+84351359520" 
          class="group bg-[#f5f5f7] hover:bg-[#e8e8ed] rounded-2xl p-6 md:p-8 transition-all duration-200"
        >
          <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Điện thoại</h3>
          <p class="text-[15px] text-blue-600 font-medium mb-1">0351 3595 202</p>
          <p class="text-[13px] text-gray-600">Hỗ trợ trong giờ làm việc</p>
        </a>

        <!-- Zalo -->
        <a 
          href="https://zalo.me/0351359520" 
          target="_blank"
          class="group bg-[#f5f5f7] hover:bg-[#e8e8ed] rounded-2xl p-6 md:p-8 transition-all duration-200"
        >
          <div class="w-12 h-12 bg-[#0068FF] rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.477 2 2 6.477 2 12c0 2.237.738 4.304 1.986 5.97L2.05 21.95l4.098-1.905C7.813 21.345 9.828 22 12 22c5.523 0 10-4.477 10-10S17.523 2 12 2zm0 18c-1.85 0-3.57-.63-4.93-1.69l-.35-.26-2.49 1.16 1.19-2.43-.29-.38C3.75 15.42 3 13.77 3 12c0-4.97 4.03-9 9-9s9 4.03 9 9-4.03 9-9 9z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Zalo</h3>
          <p class="text-[15px] text-[#0068FF] font-medium mb-1">Chat trực tuyến</p>
          <p class="text-[13px] text-gray-600">Phản hồi nhanh chóng</p>
        </a>

        <!-- Email -->
        <a 
          href="mailto:info@appejv.com" 
          class="group bg-[#f5f5f7] hover:bg-[#e8e8ed] rounded-2xl p-6 md:p-8 transition-all duration-200 sm:col-span-2 lg:col-span-1"
        >
          <div class="w-12 h-12 bg-gray-900 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Email</h3>
          <p class="text-[15px] text-gray-900 font-medium mb-1">info@appejv.com</p>
          <p class="text-[13px] text-gray-600">Phản hồi trong 24 giờ</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Office Info -->
  <section class="py-12 md:py-16 bg-[#f5f5f7]">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <!-- Address -->
        <div class="bg-white rounded-2xl p-6 md:p-8">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-gray-900 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-[17px] font-semibold text-gray-900 mb-2">Địa chỉ văn phòng</h3>
              <p class="text-[15px] text-gray-600 leading-relaxed">
                Km 50 Quốc lộ 1A, Xã Tiên Tân<br />
                Phủ Lý, Hà Nam<br />
                Việt Nam
              </p>
            </div>
          </div>
        </div>

        <!-- Working Hours -->
        <div class="bg-white rounded-2xl p-6 md:p-8">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-gray-900 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-[17px] font-semibold text-gray-900 mb-2">Giờ làm việc</h3>
              <p class="text-[15px] text-gray-600 leading-relaxed">
                Thứ 2 - Thứ 6: 8:00 - 17:00<br />
                Thứ 7: 8:00 - 12:00<br />
                Chủ nhật: Nghỉ
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-10 md:mb-12">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-3 tracking-tight">
          Gửi tin nhắn
        </h2>
        <p class="text-[17px] text-gray-600 font-light">
          Điền thông tin bên dưới, chúng tôi sẽ liên hệ lại sớm nhất
        </p>
      </div>

      <form class="space-y-5">
        <!-- Name -->
        <div>
          <label for="name" class="block text-[13px] font-medium text-gray-900 mb-2">
            Họ và tên
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
            placeholder="Nguyễn Văn A"
          />
        </div>

        <!-- Phone and Email -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
          <div>
            <label for="phone" class="block text-[13px] font-medium text-gray-900 mb-2">
              Số điện thoại
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
              placeholder="0901234567"
            />
          </div>

          <div>
            <label for="email" class="block text-[13px] font-medium text-gray-900 mb-2">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
              placeholder="email@example.com"
            />
          </div>
        </div>

        <!-- Subject -->
        <div>
          <label for="subject" class="block text-[13px] font-medium text-gray-900 mb-2">
            Chủ đề
          </label>
          <select
            id="subject"
            name="subject"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
          >
            <option>Chọn chủ đề</option>
            <option>Tư vấn sản phẩm</option>
            <option>Yêu cầu báo giá</option>
            <option>Hỗ trợ kỹ thuật</option>
            <option>Khiếu nại</option>
            <option>Khác</option>
          </select>
        </div>

        <!-- Message -->
        <div>
          <label for="message" class="block text-[13px] font-medium text-gray-900 mb-2">
            Nội dung
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows="6"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none text-[15px]"
            placeholder="Nhập nội dung tin nhắn của bạn..."
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3.5 rounded-xl font-medium text-[15px] transition-all"
        >
          Gửi tin nhắn
        </button>

        <p class="text-[13px] text-gray-500 text-center">
          Thông tin của bạn được bảo mật tuyệt đối
        </p>
      </form>
    </div>
  </section>

  <!-- Map Section (Optional) -->
  <section class="py-12 md:py-16 bg-[#f5f5f7]">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="bg-white rounded-2xl overflow-hidden">
        <div class="aspect-video bg-gray-200 flex items-center justify-center">
          <div class="text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p class="text-[15px] text-gray-600">Bản đồ sẽ được cập nhật</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
