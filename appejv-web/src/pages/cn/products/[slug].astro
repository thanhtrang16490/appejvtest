---
const lang = 'cn'
import BaseLayout from '../../../layouts/BaseLayout.astro'
import { getProductBySlug, getProducts, getCategories } from '../../../lib/supabase'

// Generate static paths for all products
export async function getStaticPaths() {
  const products = await getProducts()
  return products.map(product => ({
    params: { slug: product.slug },
  }))
}

const { slug } = Astro.params

if (!slug) {
  return Astro.redirect('/san-pham')
}

const product = await getProductBySlug(slug)

if (!product) {
  return Astro.redirect('/san-pham')
}

// Get categories for display
const categories = await getCategories()
const productCategory = categories.find(c => c.id === product.category_id)

// Get related products (same category)
const allProducts = await getProducts()
const relatedProducts = allProducts
  .filter(p => p.category_id === product.category_id && p.id !== product.id)
  .slice(0, 4)

function formatPrice(price: number): string {
  return new Intl.NumberFormat('vi-VN').format(price)
}
---

<BaseLayout 
  title={`${product.name} - APPE JV`} 
  description={product.description || `${product.name} - Sản phẩm chất lượng cao từ APPE JV`}
>
  <!-- Breadcrumb -->
  <nav class="pt-20 pb-4 bg-white border-b border-gray-200">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="flex items-center gap-2 text-[13px]">
        <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">Trang chủ</a>
        <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href="/cn/products" class="text-gray-600 hover:text-gray-900 transition-colors">Sản phẩm</a>
        <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-900">{product.name}</span>
      </div>
    </div>
  </nav>

  <!-- Product Detail -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
        <!-- Product Image -->
        <div class="order-2 md:order-1">
          <div class="aspect-square bg-[#f5f5f7] rounded-2xl flex items-center justify-center p-8 md:p-12 sticky top-24">
            {product.image_url ? (
              <img 
                src={product.image_url} 
                alt={product.name}
                class="w-full h-full object-contain"
              />
            ) : (
              <svg class="w-32 h-32 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
              </svg>
            )}
          </div>
        </div>

        <!-- Product Info -->
        <div class="order-1 md:order-2">
          {productCategory && (
            <div class="text-[13px] font-medium text-[#175ead] mb-2 uppercase tracking-wide">
              {productCategory.name}
            </div>
          )}
          
          <h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-4 tracking-tight leading-tight">
            {product.name}
          </h1>
          
          {product.code && (
            <div class="text-[13px] text-gray-600 mb-6">
              Mã: <span class="font-mono">{product.code}</span>
            </div>
          )}
          
          {product.description && (
            <p class="text-[17px] text-gray-600 mb-8 leading-relaxed">
              {product.description}
            </p>
          )}

          {/* Price */}
          <div class="mb-8 pb-8 border-b border-gray-200">
            <div class="flex items-baseline gap-2 mb-1">
              <span class="text-4xl font-semibold text-gray-900">
                {formatPrice(product.price)}đ
              </span>
              {product.unit && (
                <span class="text-[17px] text-gray-600">
                  /{product.unit}
                </span>
              )}
            </div>
            <p class="text-[13px] text-gray-500">Giá đã bao gồm VAT</p>
          </div>

          {/* Specifications */}
          {product.specifications && (
            <div class="mb-8 pb-8 border-b border-gray-200">
              <h3 class="text-[17px] font-semibold text-gray-900 mb-4">Thông số kỹ thuật</h3>
              <div class="text-[15px] text-gray-600 leading-relaxed whitespace-pre-line">
                {product.specifications}
              </div>
            </div>
          )}

          {/* Features */}
          <div class="mb-8 space-y-3">
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[15px] text-gray-900">Chất lượng đảm bảo</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[15px] text-gray-900">Mua qua 150+ đại lý toàn quốc</span>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-[15px] text-gray-900">Hỗ trợ kỹ thuật chuyên nghiệp</span>
            </div>
          </div>

          {/* CTA Buttons */}
          <div class="flex flex-col sm:flex-row gap-3">
            <a 
              href="tel:+84351359520"
              class="flex-1 inline-flex items-center justify-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl text-[15px] font-medium transition-all"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Gọi đặt hàng
            </a>
            <a 
              href="/cn/contact"
              class="flex-1 inline-flex items-center justify-center gap-2 bg-white hover:bg-gray-50 text-gray-900 px-6 py-3 rounded-xl text-[15px] font-medium transition-all border border-gray-200"
            >
              Liên hệ tư vấn
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Related Products */}
  {relatedProducts.length > 0 && (
    <section class="py-12 md:py-16 bg-[#f5f5f7]">
      <div class="max-w-[980px] mx-auto px-4 sm:px-6">
        <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-8 tracking-tight">
          Sản phẩm liên quan
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
          {relatedProducts.map((relatedProduct) => (
            <a
              href={`/san-pham/${relatedProduct.slug}`}
              class="group bg-white rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300"
            >
              <div class="aspect-square bg-[#f5f5f7] overflow-hidden">
                {relatedProduct.image_url ? (
                  <img 
                    src={relatedProduct.image_url} 
                    alt={relatedProduct.name}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                  </div>
                )}
              </div>
              <div class="p-4">
                <h3 class="text-[15px] font-semibold text-gray-900 mb-1 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  {relatedProduct.name}
                </h3>
                <div class="flex items-baseline gap-2">
                  <span class="text-[17px] font-semibold text-gray-900">
                    {formatPrice(relatedProduct.price)}đ
                  </span>
                  {relatedProduct.unit && (
                    <span class="text-[13px] text-gray-500">
                      /{relatedProduct.unit}
                    </span>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</BaseLayout>
