---
import BaseLayout from '../../layouts/BaseLayout.astro'

const seoTitle = "联系我们 - APPE JV 越南 | 畜牧饲料咨询"
const seoDescription = "联系APPE JV获取畜牧饲料咨询和支持。热线：0351 3595 202/203。电子邮件：info@appe.com.vn。地址：越南河南省富利市国道1A公路50公里处。"
const seoKeywords = [
  "联系APPE",
  "畜牧饲料咨询",
  "APPE热线",
  "APPE河南地址",
  "APPE电子邮件",
  "客户支持",
  "订购畜牧饲料"
]
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical="/cn/contact"
  lang="cn"
>
  <!-- Hero Section - Apple Style -->
  <section class="pt-24 md:pt-32 pb-16 md:pb-20 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-semibold text-gray-900 mb-4 tracking-tight leading-tight">
          联系我们
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-600 font-light max-w-2xl mx-auto">
          我们随时准备倾听并为您提供支持
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Methods - Clean Grid -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
        <!-- Phone -->
        <a 
          href="tel:+84351359520" 
          class="group bg-[#f5f5f7] hover:bg-[#e8e8ed] rounded-2xl p-6 md:p-8 transition-all duration-200"
        >
          <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">电话</h3>
          <p class="text-[15px] text-blue-600 font-medium mb-1">0351 3595 202</p>
          <p class="text-[13px] text-gray-600">工作时间内提供支持</p>
        </a>

        <!-- Zalo -->
        <a 
          href="https://zalo.me/0351359520" 
          target="_blank"
          class="group bg-[#f5f5f7] hover:bg-[#e8e8ed] rounded-2xl p-6 md:p-8 transition-all duration-200"
        >
          <div class="w-12 h-12 bg-[#0068FF] rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.477 2 2 6.477 2 12c0 2.237.738 4.304 1.986 5.97L2.05 21.95l4.098-1.905C7.813 21.345 9.828 22 12 22c5.523 0 10-4.477 10-10S17.523 2 12 2zm0 18c-1.85 0-3.57-.63-4.93-1.69l-.35-.26-2.49 1.16 1.19-2.43-.29-.38C3.75 15.42 3 13.77 3 12c0-4.97 4.03-9 9-9s9 4.03 9 9-4.03 9-9 9z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Zalo</h3>
          <p class="text-[15px] text-[#0068FF] font-medium mb-1">在线聊天</p>
          <p class="text-[13px] text-gray-600">快速响应</p>
        </a>

        <!-- Email -->
        <a 
          href="mailto:info@appejv.com" 
          class="group bg-[#f5f5f7] hover:bg-[#e8e8ed] rounded-2xl p-6 md:p-8 transition-all duration-200 sm:col-span-2 lg:col-span-1"
        >
          <div class="w-12 h-12 bg-gray-900 rounded-full flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">电子邮件</h3>
          <p class="text-[15px] text-gray-900 font-medium mb-1">info@appejv.com</p>
          <p class="text-[13px] text-gray-600">24小时内回复</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Office Info -->
  <section class="py-12 md:py-16 bg-[#f5f5f7]">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <!-- Address -->
        <div class="bg-white rounded-2xl p-6 md:p-8">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-gray-900 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-[17px] font-semibold text-gray-900 mb-2">办公地址</h3>
              <p class="text-[15px] text-gray-600 leading-relaxed">
                国道1A公路50公里处，天坛社<br />
                富利市，河南省<br />
                越南
              </p>
            </div>
          </div>
        </div>

        <!-- Working Hours -->
        <div class="bg-white rounded-2xl p-6 md:p-8">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-gray-900 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="text-[17px] font-semibold text-gray-900 mb-2">工作时间</h3>
              <p class="text-[15px] text-gray-600 leading-relaxed">
                周一至周五：上午8:00 - 下午5:00<br />
                周六：上午8:00 - 中午12:00<br />
                周日：休息
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-10 md:mb-12">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-3 tracking-tight">
          发送消息
        </h2>
        <p class="text-[17px] text-gray-600 font-light">
          填写以下信息，我们将尽快与您联系
        </p>
      </div>

      <form class="space-y-5">
        <!-- Name -->
        <div>
          <label for="name" class="block text-[13px] font-medium text-gray-900 mb-2">
            姓名
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
            placeholder="张三"
          />
        </div>

        <!-- Phone and Email -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
          <div>
            <label for="phone" class="block text-[13px] font-medium text-gray-900 mb-2">
              电话号码
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
              placeholder="+84 901234567"
            />
          </div>

          <div>
            <label for="email" class="block text-[13px] font-medium text-gray-900 mb-2">
              电子邮件
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
              placeholder="email@example.com"
            />
          </div>
        </div>

        <!-- Subject -->
        <div>
          <label for="subject" class="block text-[13px] font-medium text-gray-900 mb-2">
            主题
          </label>
          <select
            id="subject"
            name="subject"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-[15px]"
          >
            <option>选择主题</option>
            <option>产品咨询</option>
            <option>报价请求</option>
            <option>技术支持</option>
            <option>投诉</option>
            <option>其他</option>
          </select>
        </div>

        <!-- Message -->
        <div>
          <label for="message" class="block text-[13px] font-medium text-gray-900 mb-2">
            消息内容
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows="6"
            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none text-[15px]"
            placeholder="输入您的消息..."
          ></textarea>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3.5 rounded-xl font-medium text-[15px] transition-all"
        >
          发送消息
        </button>

        <p class="text-[13px] text-gray-500 text-center">
          您的信息将被严格保密
        </p>
      </form>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-12 md:py-16 bg-[#f5f5f7]">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-8">
        <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-2 tracking-tight">
          查找前往办公室的路线
        </h2>
        <p class="text-[15px] text-gray-600">
          国道1A公路50公里处，天坛，富利，河南
        </p>
      </div>
      
      <div class="bg-white rounded-2xl overflow-hidden shadow-sm">
        <div class="aspect-video relative">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3728.2!2d105.92748754703804!3d20.601988009590755!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjDCsDM2JzA3LjIiTiAxMDXCsDU1JzM4LjkiRQ!5e0!3m2!1szh-CN!2svn!4v1709000000000!5m2!1szh-CN!2svn"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="absolute inset-0"
            title="APPE JV 越南地图"
          ></iframe>
        </div>
        
        <div class="p-6 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="text-[15px] font-medium text-gray-900">APPE JV 越南</p>
                <p class="text-[13px] text-gray-600">国道1A公路50公里，富利，河南</p>
              </div>
            </div>
            
            <a 
              href="https://maps.app.goo.gl/5AQ9xF3Mj1Lqo7HG8"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-[13px] font-medium transition-all"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              获取路线
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
