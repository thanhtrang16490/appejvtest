  <!-- Enhanced Parallax Scroll Effects -->
  <script>
    let ticking = false;
    
    function updateParallax() {
      const scrolled = window.pageYOffset;
      
      // Parallax layers in hero
      const parallaxLayers = document.querySelectorAll('.parallax-layer');
      parallaxLayers.forEach(layer => {
        const speed = parseFloat(layer.dataset.speed) || 0.5;
        const yPos = -(scrolled * speed);
        layer.style.transform = `translateY(${yPos}px)`;
      });
      
      // Parallax text elements
      const parallaxTexts = document.querySelectorAll('.parallax-text');
      parallaxTexts.forEach(text => {
        const speed = parseFloat(text.dataset.speed) || 0.3;
        const yPos = -(scrolled * speed);
        text.style.transform = `translateY(${yPos}px)`;
      });
      
      // Hide scroll indicator after scrolling
      const scrollIndicator = document.querySelector('.scroll-indicator');
      if (scrollIndicator) {
        if (scrolled > 100) {
          scrollIndicator.style.opacity = '0';
          scrollIndicator.style.pointerEvents = 'none';
        } else {
          scrollIndicator.style.opacity = '1';
          scrollIndicator.style.pointerEvents = 'auto';
        }
      }
      
      // Scale effect on sections
      const sections = document.querySelectorAll('section');
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        const scrollProgress = 1 - (rect.top / window.innerHeight);
        
        if (scrollProgress > 0 && scrollProgress < 1) {
          const scale = 0.95 + (scrollProgress * 0.05);
          const opacity = Math.max(0.3, scrollProgress);
          
          // Apply subtle scale and opacity
          if (section.id !== 'hero-section') {
            section.style.transform = `scale(${Math.min(scale, 1)})`;
            section.style.opacity = opacity;
          }
        }
      });
      
      ticking = false;
    }
    
    function requestTick() {
      if (!ticking) {
        window.requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }
    
    window.addEventListener('scroll', requestTick);
    
    // Initial call
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', updateParallax);
    } else {
      updateParallax();
    }
  </script>

