---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getProducts, getCategories } from '../../lib/supabase'

const seoTitle = "Products - APPE JV | Pig Feed, Poultry Feed, Fish Feed"
const seoDescription = "APPE JV animal feed product catalog: Pig Feed, Poultry Feed, Fish Feed. High quality, optimal nutrition, advanced technology."
const seoKeywords = ["APPE products", "pig feed", "poultry feed", "fish feed", "product catalog", "quality animal feed"]

const url = new URL(Astro.request.url)
const categoryFilter = url.searchParams.get('category') || 'all'
const searchQuery = url.searchParams.get('search') || ''

const allProducts = await getProducts()
const apiCategories = await getCategories()

const categories = [
  { id: 'all', name: 'All', icon: 'ðŸ­' },
  ...apiCategories
]

const categoriesWithCount = categories.map(cat => {
  const count = cat.id === 'all' 
    ? allProducts.length 
    : allProducts.filter(p => p.category_id === cat.id).length
  return { ...cat, count }
}).filter(cat => cat.count > 0)

let filteredProducts = allProducts

if (categoryFilter !== 'all') {
  filteredProducts = filteredProducts.filter(p => p.category_id === categoryFilter)
}

if (searchQuery) {
  filteredProducts = filteredProducts.filter(p => 
    p.name.toLowerCase().includes(searchQuery.toLowerCase())
  )
}

function formatPrice(price: number): string {
  return new Intl.NumberFormat('vi-VN').format(price)
}
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical="/en/products"
  lang="en"
>
  <section class="pt-24 md:pt-32 pb-12 md:pb-16 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-8 md:mb-12">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-semibold text-gray-900 mb-4 tracking-tight leading-tight">
          Products
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-600 font-light max-w-2xl mx-auto">
          Professional nutrition for every growth stage
        </p>
      </div>

      <div class="max-w-[692px] mx-auto mb-8">
        <form method="get" class="relative">
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input type="search" name="search" placeholder="Search products..." value={searchQuery}
            class="w-full pl-12 pr-4 py-3 bg-[#f5f5f7] rounded-xl text-[15px] focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all" />
          <input type="hidden" name="category" value={categoryFilter} />
        </form>
      </div>
    </div>
  </section>

  <section class="py-6 bg-white border-b border-gray-200">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="flex gap-2 overflow-x-auto scrollbar-hide pb-2">
        {categoriesWithCount.map((cat) => (
          <a href={`/en/products?category=${cat.id}${searchQuery ? `&search=${searchQuery}` : ''}`}
            class={`flex-shrink-0 px-4 py-2 rounded-full text-[13px] font-medium transition-all ${
              categoryFilter === cat.id ? 'bg-gray-900 text-white' : 'bg-[#f5f5f7] text-gray-900 hover:bg-[#e8e8ed]'
            }`}>
            <span class="mr-1.5">{cat.icon}</span>
            {cat.name}
            <span class="ml-1.5 opacity-60">({cat.count})</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="mb-6">
        <p class="text-[13px] text-gray-600">
          <span class="result-count">{filteredProducts.length} products</span>
        </p>
      </div>

      {filteredProducts.length === 0 ? (
        <div class="text-center py-20">
          <svg class="w-20 h-20 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">No products found</h3>
          <p class="text-[15px] text-gray-600 mb-6">Try searching with different keywords or select another category</p>
          <a href="/en/products" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-xl text-[15px] font-medium hover:bg-blue-700 transition-all">
            View all products
          </a>
        </div>
      ) : (
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
          {filteredProducts.map((product) => (
            <a href={`/en/products/${product.slug}`}
              class="group bg-white rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300">
              <div class="aspect-square bg-[#f5f5f7] overflow-hidden">
                {product.image_url ? (
                  <img src={product.image_url} alt={product.name}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" />
                ) : (
                  <div class="w-full h-full flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                    </svg>
                  </div>
                )}
              </div>
              <div class="p-4">
                <h3 class="text-[15px] font-semibold text-gray-900 mb-1 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  {product.name}
                </h3>
                {product.description && (
                  <p class="text-[13px] text-gray-600 mb-2 line-clamp-2">{product.description}</p>
                )}
                {product.price && (
                  <div class="flex items-baseline gap-2">
                    <span class="text-[17px] font-semibold text-gray-900">{formatPrice(product.price)}Ä‘</span>
                    {product.unit && (<span class="text-[13px] text-gray-500">/{product.unit}</span>)}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      )}

      {filteredProducts.length > 12 && (
        <div class="text-center mt-12">
          <button id="load-more" class="px-8 py-3 bg-[#f5f5f7] hover:bg-[#e8e8ed] text-gray-900 rounded-xl text-[15px] font-medium transition-all">
            Load more products
          </button>
        </div>
      )}
    </div>
  </section>

  <section class="py-16 md:py-20 bg-[#f5f5f7]">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6 text-center">
      <h2 class="text-3xl sm:text-4xl font-semibold text-gray-900 mb-4 tracking-tight">Need Consultation?</h2>
      <p class="text-[17px] text-gray-600 mb-8 font-light">Our team of experts is ready to help you choose the right products</p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="tel:+84351359520" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl text-[15px] font-medium transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call now: 0351 359 520
        </a>
        <a href="/en/contact" class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-white hover:bg-gray-50 text-gray-900 rounded-xl text-[15px] font-medium transition-all border border-gray-200">
          Contact for consultation
        </a>
      </div>
    </div>
  </section>

  <style>
    .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
    .scrollbar-hide::-webkit-scrollbar { display: none; }
    .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const searchInput = document.querySelector('input[name="search"]') as HTMLInputElement;
      const productsGrid = document.querySelector('.grid.grid-cols-2') as HTMLElement;
      const noResultsDiv = document.querySelector('.text-center.py-20') as HTMLElement;
      const resultCount = document.querySelector('.result-count') as HTMLElement;
      
      if (!searchInput || !productsGrid) return;

      const allProductCards = Array.from(productsGrid.children) as HTMLElement[];
      
      function debounce(func: Function, wait: number) {
        let timeout: NodeJS.Timeout;
        return function executedFunction(...args: any[]) {
          const later = () => { clearTimeout(timeout); func(...args); };
          clearTimeout(timeout);
          timeout = setTimeout(later, wait);
        };
      }

      function filterProducts(searchTerm: string) {
        const term = searchTerm.toLowerCase().trim();
        let visibleCount = 0;
        
        allProductCards.forEach((card) => {
          const productName = card.querySelector('h3')?.textContent?.toLowerCase() || '';
          const productDesc = card.querySelector('p')?.textContent?.toLowerCase() || '';
          const matches = term === '' || productName.includes(term) || productDesc.includes(term);
          
          if (matches) {
            card.style.display = '';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });

        if (resultCount) resultCount.textContent = `${visibleCount} products`;

        if (visibleCount === 0) {
          productsGrid.style.display = 'none';
          if (noResultsDiv) {
            noResultsDiv.style.display = 'block';
            const messageP = noResultsDiv.querySelector('p');
            if (messageP && term) messageP.textContent = `No products found with keyword "${searchTerm}"`;
          }
        } else {
          productsGrid.style.display = 'grid';
          if (noResultsDiv) noResultsDiv.style.display = 'none';
        }
      }

      const debouncedFilter = debounce((value: string) => filterProducts(value), 300);
      searchInput.addEventListener('input', (e) => debouncedFilter((e.target as HTMLInputElement).value));
      searchInput.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') { e.preventDefault(); filterProducts(searchInput.value); }
        if (e.key === 'Escape') { searchInput.value = ''; filterProducts(''); }
      });

      const loadMoreBtn = document.getElementById('load-more');
      if (loadMoreBtn) loadMoreBtn.addEventListener('click', () => console.log('Load more products'));
    });
  </script>
</BaseLayout>
