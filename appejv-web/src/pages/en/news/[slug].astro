---
import BaseLayout from '../../../layouts/BaseLayout.astro'
import { allPosts } from '../../../data/blog-posts-en'

export async function getStaticPaths() {
  return allPosts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }))
}

const { post } = Astro.props
const { slug } = Astro.params

const relatedPosts = allPosts
  .filter(p => p.category === post.category && p.slug !== post.slug)
  .slice(0, 3)

const seoTitle = `${post.title} - APPE JV Blog`
const seoDescription = post.excerpt
const seoKeywords = [post.category, "APPE JV", "livestock", "animal feed"]
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical={`/en/news/${slug}`}
  lang="en"
  ogImage={post.image}
>
  <section class="pt-24 md:pt-28 pb-6 bg-white border-b border-gray-200">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <nav class="flex items-center gap-2 text-[13px]">
        <a href="/en" class="text-gray-600 hover:text-gray-900 transition-colors">Home</a>
        <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href="/en/news" class="text-gray-600 hover:text-gray-900 transition-colors">News</a>
        <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-900 font-medium">{post.category}</span>
      </nav>
    </div>
  </section>

  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <div class="mb-4">
        <span class="inline-block px-3 py-1 bg-blue-600 text-white rounded-full text-[11px] font-medium">
          {post.category}
        </span>
      </div>

      <h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-6 tracking-tight leading-tight">
        {post.title}
      </h1>

      <div class="flex flex-wrap items-center gap-4 text-[13px] text-gray-600 mb-8 pb-8 border-b border-gray-200">
        <div class="flex items-center gap-2">
          <div class="w-10 h-10 bg-gray-200 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <div>
            <div class="font-medium text-gray-900">{post.author}</div>
            <div class="text-[11px] text-gray-500">{post.authorRole}</div>
          </div>
        </div>
        <span>•</span>
        <span>{new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        <span>•</span>
        <span>{post.readTime}</span>
      </div>

      <div class="aspect-[16/9] bg-gradient-to-br from-blue-600 to-blue-800 rounded-2xl mb-12 flex items-center justify-center">
        <svg class="w-20 h-20 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    </div>
  </section>

  <section class="pb-16 md:pb-20 bg-white">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <article class="prose prose-gray max-w-none">
        <div set:html={post.content} class="article-content" />
      </article>
    </div>
  </section>

  <section class="py-12 bg-[#f5f5f7] border-y border-gray-200">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <div class="flex items-center justify-between">
        <span class="text-[15px] font-medium text-gray-900">Share article</span>
        <div class="flex items-center gap-2">
          <button class="w-10 h-10 bg-white hover:bg-gray-100 rounded-full flex items-center justify-center transition-colors" aria-label="Share on Facebook">
            <svg class="w-4 h-4 text-gray-700" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </button>
          <button class="w-10 h-10 bg-white hover:bg-gray-100 rounded-full flex items-center justify-center transition-colors" aria-label="Copy link">
            <svg class="w-4 h-4 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </section>

  {relatedPosts.length > 0 && (
    <section class="py-16 md:py-20 bg-white">
      <div class="max-w-[980px] mx-auto px-4 sm:px-6">
        <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-8 tracking-tight">
          Related Articles
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {relatedPosts.map((relatedPost) => (
            <a href={`/en/news/${relatedPost.slug}`}
              class="block bg-[#f5f5f7] rounded-2xl overflow-hidden hover:bg-gray-100 transition-all group">
              <div class="aspect-[16/10] bg-gradient-to-br from-blue-600 to-blue-800 flex items-center justify-center">
                <svg class="w-12 h-12 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <div class="p-6">
                <div class="flex items-center gap-2 mb-3">
                  <span class="inline-block px-2 py-1 bg-white rounded text-[11px] font-medium text-gray-600">
                    {relatedPost.category}
                  </span>
                </div>
                <h3 class="text-[17px] font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-blue-600 transition-colors">
                  {relatedPost.title}
                </h3>
                <p class="text-[13px] text-gray-600 line-clamp-2">
                  {relatedPost.excerpt}
                </p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}

  <style>
    .article-content {
      font-size: 17px;
      line-height: 1.7;
      color: #1d1d1f;
    }
    .article-content p { margin-bottom: 1.5rem; }
    .article-content h2 {
      font-size: 28px;
      font-weight: 600;
      margin-top: 2.5rem;
      margin-bottom: 1rem;
      color: #1d1d1f;
      line-height: 1.3;
    }
    .article-content h3 {
      font-size: 21px;
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 0.75rem;
      color: #1d1d1f;
      line-height: 1.4;
    }
    .article-content ul, .article-content ol {
      margin-bottom: 1.5rem;
      padding-left: 1.5rem;
    }
    .article-content li {
      margin-bottom: 0.5rem;
      line-height: 1.7;
    }
    .article-content strong {
      font-weight: 600;
      color: #1d1d1f;
    }
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
</BaseLayout>
