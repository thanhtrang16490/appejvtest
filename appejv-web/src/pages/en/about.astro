---
import BaseLayout from '../../layouts/BaseLayout.astro'

const seoTitle = "About Us - APPE JV Vietnam | High-Quality Livestock Feed"
const seoDescription = "APPE JV established in 2008, specializes in producing high-quality livestock and aquaculture feed. Applying advanced technology, exporting to Southeast Asia and Europe. Vision to become a leading trusted enterprise."
const seoKeywords = [
  "about APPE JV",
  "about APPE Vietnam",
  "livestock feed company",
  "APPE history",
  "vision mission",
  "livestock enterprise",
  "A Group",
  "established 2008"
]
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  canonical="/en/about"
>
  <!-- Hero Section -->
  <section class="pt-24 md:pt-32 pb-16 md:pb-20 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-12 md:mb-16">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-semibold text-gray-900 mb-4 tracking-tight leading-tight">
          About APPE JV
        </h1>
        <p class="text-lg sm:text-xl md:text-2xl text-gray-600 font-light max-w-3xl mx-auto leading-relaxed">
          Specializing in producing and supplying high-quality feed for pigs, poultry and aquaculture
        </p>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-semibold text-gray-900 mb-2">2008</div>
          <div class="text-[13px] md:text-[15px] text-gray-600">Year Established</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-semibold text-gray-900 mb-2">150+</div>
          <div class="text-[13px] md:text-[15px] text-gray-600">Dealers</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-semibold text-gray-900 mb-2">16+</div>
          <div class="text-[13px] md:text-[15px] text-gray-600">Years Experience</div>
        </div>
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-semibold text-gray-900 mb-2">3</div>
          <div class="text-[13px] md:text-[15px] text-gray-600">Export Markets</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="py-16 md:py-20 bg-[#f5f5f7]">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
        <!-- Mission -->
        <div class="bg-white rounded-2xl p-8 md:p-10">
          <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4 tracking-tight">Mission</h2>
          <p class="text-[15px] md:text-[17px] text-gray-600 leading-relaxed">
            Provide high-quality, safe and effective livestock feed, contributing to the sustainable development of Vietnam's livestock industry.
          </p>
        </div>

        <!-- Vision -->
        <div class="bg-white rounded-2xl p-8 md:p-10">
          <div class="w-12 h-12 bg-gray-900 rounded-full flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-4 tracking-tight">Vision</h2>
          <p class="text-[15px] md:text-[17px] text-gray-600 leading-relaxed">
            Become a leading livestock feed manufacturer in Vietnam and the region, trusted by thousands of farms.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Core Values -->
  <section class="py-16 md:py-20 bg-white">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-3 tracking-tight">
          Core Values
        </h2>
        <p class="text-[17px] text-gray-600 font-light">
          Values that guide all our activities
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        <!-- Quality -->
        <div class="text-center">
          <div class="w-16 h-16 bg-[#f5f5f7] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Quality</h3>
          <p class="text-[15px] text-gray-600 leading-relaxed">
            Commitment to high-quality products, safe for livestock and consumers
          </p>
        </div>

        <!-- Technology -->
        <div class="text-center">
          <div class="w-16 h-16 bg-[#f5f5f7] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Technology</h3>
          <p class="text-[15px] text-gray-600 leading-relaxed">
            Application of advanced technology in production and quality management
          </p>
        </div>

        <!-- Customer -->
        <div class="text-center">
          <div class="w-16 h-16 bg-[#f5f5f7] rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Customer</h3>
          <p class="text-[15px] text-gray-600 leading-relaxed">
            Putting customer interests and satisfaction first
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Certifications -->
  <section class="py-16 md:py-20 bg-[#f5f5f7]">
    <div class="max-w-[980px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-3 tracking-tight">
          Certifications & Standards
        </h2>
        <p class="text-[17px] text-gray-600 font-light">
          Internationally recognized quality commitment
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        <!-- ISO -->
        <div class="bg-white rounded-2xl p-6 text-center">
          <div class="text-4xl mb-3">üèÜ</div>
          <h3 class="text-[15px] font-semibold text-gray-900 mb-1">ISO 9001:2015</h3>
          <p class="text-[13px] text-gray-600">Quality Management</p>
        </div>

        <!-- HACCP -->
        <div class="bg-white rounded-2xl p-6 text-center">
          <div class="text-4xl mb-3">‚úì</div>
          <h3 class="text-[15px] font-semibold text-gray-900 mb-1">HACCP</h3>
          <p class="text-[13px] text-gray-600">Food Safety</p>
        </div>

        <!-- GMP -->
        <div class="bg-white rounded-2xl p-6 text-center">
          <div class="text-4xl mb-3">‚ö°</div>
          <h3 class="text-[15px] font-semibold text-gray-900 mb-1">GMP</h3>
          <p class="text-[13px] text-gray-600">Good Manufacturing Practice</p>
        </div>

        <!-- Export -->
        <div class="bg-white rounded-2xl p-6 text-center">
          <div class="text-4xl mb-3">üåè</div>
          <h3 class="text-[15px] font-semibold text-gray-900 mb-1">Export</h3>
          <p class="text-[13px] text-gray-600">International Standard</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-16 md:py-20 bg-white">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-gray-900 mb-3 tracking-tight">
          Development Journey
        </h2>
        <p class="text-[17px] text-gray-600 font-light">
          16 years of continuous innovation
        </p>
      </div>

      <div class="space-y-8">
        <!-- 2008 -->
        <div class="flex gap-6">
          <div class="flex-shrink-0 w-20 text-right">
            <div class="text-2xl font-semibold text-gray-900">2008</div>
          </div>
          <div class="flex-1 pb-8 border-b border-gray-200">
            <h3 class="text-[17px] font-semibold text-gray-900 mb-2">Establishment</h3>
            <p class="text-[15px] text-gray-600">
              Beginning the journey with a vision to develop Vietnam's livestock industry
            </p>
          </div>
        </div>

        <!-- 2012 -->
        <div class="flex gap-6">
          <div class="flex-shrink-0 w-20 text-right">
            <div class="text-2xl font-semibold text-gray-900">2012</div>
          </div>
          <div class="flex-1 pb-8 border-b border-gray-200">
            <h3 class="text-[17px] font-semibold text-gray-900 mb-2">Production Expansion</h3>
            <p class="text-[15px] text-gray-600">
              Investment in modern technology lines, increasing capacity
            </p>
          </div>
        </div>

        <!-- 2016 -->
        <div class="flex gap-6">
          <div class="flex-shrink-0 w-20 text-right">
            <div class="text-2xl font-semibold text-gray-900">2016</div>
          </div>
          <div class="flex-1 pb-8 border-b border-gray-200">
            <h3 class="text-[17px] font-semibold text-gray-900 mb-2">International Export</h3>
            <p class="text-[15px] text-gray-600">
              Expanding to Southeast Asian and European markets
            </p>
          </div>
        </div>

        <!-- 2020 -->
        <div class="flex gap-6">
          <div class="flex-shrink-0 w-20 text-right">
            <div class="text-2xl font-semibold text-gray-900">2020</div>
          </div>
          <div class="flex-1 pb-8 border-b border-gray-200">
            <h3 class="text-[17px] font-semibold text-gray-900 mb-2">ISO 9001:2015</h3>
            <p class="text-[15px] text-gray-600">
              Achieved international certification for quality management
            </p>
          </div>
        </div>

        <!-- 2024 -->
        <div class="flex gap-6">
          <div class="flex-shrink-0 w-20 text-right">
            <div class="text-2xl font-semibold text-gray-900">2024</div>
          </div>
          <div class="flex-1">
            <h3 class="text-[17px] font-semibold text-gray-900 mb-2">150+ Dealers</h3>
            <p class="text-[15px] text-gray-600">
              Trusted by thousands of farms nationwide
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Company Info -->
  <section class="py-16 md:py-20 bg-[#f5f5f7]">
    <div class="max-w-[692px] mx-auto px-4 sm:px-6">
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-8 text-center tracking-tight">
        Company Information
      </h2>
      <div class="bg-white rounded-2xl p-8 md:p-10">
        <div class="space-y-6">
          <div class="flex justify-between items-center pb-6 border-b border-gray-200">
            <span class="text-[15px] text-gray-600">Company Name</span>
            <span class="text-[15px] font-medium text-gray-900">APPE JV Vietnam Joint Stock Company</span>
          </div>
          <div class="flex justify-between items-center pb-6 border-b border-gray-200">
            <span class="text-[15px] text-gray-600">Year Established</span>
            <span class="text-[15px] font-medium text-gray-900">2008</span>
          </div>
          <div class="flex justify-between items-center pb-6 border-b border-gray-200">
            <span class="text-[15px] text-gray-600">Industry</span>
            <span class="text-[15px] font-medium text-gray-900">Livestock & Aquaculture Feed</span>
          </div>
          <div class="flex justify-between items-center pb-6 border-b border-gray-200">
            <span class="text-[15px] text-gray-600">Location</span>
            <span class="text-[15px] font-medium text-gray-900">Ha Nam, Vietnam</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-[15px] text-gray-600">Markets</span>
            <span class="text-[15px] font-medium text-gray-900">Vietnam, Southeast Asia, Europe</span>
