---
import BaseLayout from '../layouts/BaseLayout.astro'
import ScrollDrivenProduct from '../components/ScrollDrivenProduct.astro'
import FloatingContactButtons from '../components/FloatingContactButtons.astro'

const seoTitle = "Showcase Sản phẩm - APPE JV | Trải nghiệm Apple-style"
const seoDescription = "Khám phá dòng sản phẩm APPE JV với trải nghiệm scroll-driven theo phong cách Apple. Thức ăn chăn nuôi chất lượng cao cho heo, gia cầm và thủy sản."

const products = [
  {
    title: "Pig Feed Premium",
    subtitle: "Thức ăn heo cao cấp",
    description: "Công thức dinh dưỡng tối ưu cho heo giai đoạn sinh trưởng. Protein cao, vitamin cân bằng, giúp tăng trọng nhanh và tỷ lệ FCR thấp.",
    features: [
      "Protein 18-20%, năng lượng cao",
      "Vitamin & khoáng chất cân bằng",
      "Không chất cấm, an toàn tuyệt đối",
      "Tăng trọng 800-900g/ngày"
    ],
    image: "/appejv-logo.png",
    color: "#e11d48"
  },
  {
    title: "Poultry Feed Excellence",
    subtitle: "Thức ăn gia cầm xuất sắc",
    description: "Dòng sản phẩm chuyên biệt cho gà, vịt, ngan. Công nghệ tiên tiến, dinh dưỡng hoàn hảo cho từng giai đoạn phát triển.",
    features: [
      "Công thức theo từng giai đoạn",
      "Tăng cường sức đề kháng",
      "Tỷ lệ đẻ trứng cao 85-90%",
      "Chất lượng thịt, trứng vượt trội"
    ],
    image: "/appejv-logo.png",
    reverse: true,
    color: "#f59e0b"
  },
  {
    title: "Fish Feed Innovation",
    subtitle: "Thức ăn thủy sản đổi mới",
    description: "Giải pháp dinh dưỡng toàn diện cho nuôi trồng thủy sản. Công nghệ viên nổi, chìm, phù hợp mọi loại cá.",
    features: [
      "Công nghệ viên nổi/chìm tiên tiến",
      "Tỷ lệ FCR 1.2-1.5",
      "Tăng trưởng nhanh, đồng đều",
      "Giảm ô nhiễm môi trường nước"
    ],
    image: "/appejv-logo.png",
    color: "#3b82f6"
  }
]
---

<BaseLayout 
  title={seoTitle}
  description={seoDescription}
  canonical="/showcase"
>
  <div class="showcase-page">
    
    <!-- Hero Section - Full Screen -->
    <section class="showcase-hero">
      <div class="hero-content">
        <div class="hero-text">
          <h1 class="hero-title">
            <span class="hero-title-line">Dinh dưỡng</span>
            <span class="hero-title-line">chuyên nghiệp</span>
            <span class="hero-title-line gradient-text">cho mọi giai đoạn</span>
          </h1>
          <p class="hero-subtitle">
            Khám phá dòng sản phẩm được tin dùng bởi hàng nghìn trang trại
          </p>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="scroll-indicator">
          <div class="scroll-mouse">
            <div class="scroll-wheel"></div>
          </div>
          <span class="scroll-text">Cuộn để khám phá</span>
        </div>
      </div>
      
      <!-- Animated Background -->
      <div class="hero-background">
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
      </div>
    </section>

    <!-- Product Showcases -->
    {products.map(product => (
      <ScrollDrivenProduct {...product} />
    ))}

    <!-- CTA Section -->
    <section class="cta-section">
      <div class="cta-container">
        <div class="cta-content">
          <h2 class="cta-title">Sẵn sàng nâng cao<br />hiệu quả chăn nuôi?</h2>
          <p class="cta-description">
            Đội ngũ chuyên gia của chúng tôi sẵn sàng tư vấn giải pháp dinh dưỡng phù hợp nhất cho trang trại của bạn.
          </p>
          <div class="cta-buttons">
            <a href="/lien-he" class="cta-button primary">
              Liên hệ tư vấn
              <svg class="button-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <a href="/san-pham" class="cta-button secondary">
              Xem tất cả sản phẩm
            </a>
          </div>
        </div>
      </div>
    </section>

  </div>

  <FloatingContactButtons />
</BaseLayout>

<style>
  .showcase-page {
    background: #ffffff;
    overflow-x: hidden;
  }

  /* Hero Section */
  .showcase-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-text {
    margin-bottom: 4rem;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 2rem;
    letter-spacing: -0.02em;
  }

  .hero-title-line {
    display: block;
    color: white;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .hero-title-line:nth-child(1) {
    animation-delay: 0.2s;
  }

  .hero-title-line:nth-child(2) {
    animation-delay: 0.4s;
  }

  .hero-title-line:nth-child(3) {
    animation-delay: 0.6s;
  }

  .gradient-text {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: rgba(255, 255, 255, 0.9);
    font-weight: 300;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 0.8s forwards;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    opacity: 0;
    animation: fadeInUp 0.8s ease-out 1s forwards;
  }

  .scroll-mouse {
    width: 30px;
    height: 50px;
    border: 2px solid rgba(255, 255, 255, 0.5);
    border-radius: 15px;
    position: relative;
  }

  .scroll-wheel {
    width: 4px;
    height: 8px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 2px;
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    animation: scrollWheel 1.5s ease-in-out infinite;
  }

  .scroll-text {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  @keyframes scrollWheel {
    0%, 100% {
      top: 8px;
      opacity: 1;
    }
    50% {
      top: 20px;
      opacity: 0.5;
    }
  }

  /* Hero Background */
  .hero-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.6;
    animation: float 20s ease-in-out infinite;
  }

  .orb-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    top: 50%;
    right: -10%;
    animation-delay: 5s;
  }

  .orb-3 {
    width: 600px;
    height: 600px;
    background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    bottom: -20%;
    left: 30%;
    animation-delay: 10s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -30px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  /* CTA Section */
  .cta-section {
    padding: 10rem 2rem;
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    position: relative;
    overflow: hidden;
  }

  .cta-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .cta-content {
    text-align: center;
    position: relative;
    z-index: 10;
  }

  .cta-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: white;
    letter-spacing: -0.02em;
  }

  .cta-description {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: rgba(255, 255, 255, 0.8);
    max-width: 700px;
    margin: 0 auto 3rem;
    font-weight: 300;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1.25rem 2.5rem;
    border-radius: 9999px;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
  }

  .cta-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
  }

  .cta-button.secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
  }

  .cta-button.secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  .button-icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease;
  }

  .cta-button:hover .button-icon {
    transform: translateX(4px);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta-section {
      padding: 5rem 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .cta-button {
      justify-content: center;
    }
  }
</style>

<script>
  // Smooth scroll behavior
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault()
      const target = document.querySelector(this.getAttribute('href'))
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        })
      }
    })
  })

  // Hide scroll indicator on scroll
  let scrolled = false
  window.addEventListener('scroll', () => {
    if (!scrolled && window.scrollY > 100) {
      scrolled = true
      const indicator = document.querySelector('.scroll-indicator')
      if (indicator) {
        indicator.style.opacity = '0'
        indicator.style.transform = 'translateY(20px)'
      }
    }
  })
</script>
