    href="https://m.me/appejv" 
    target="_blank"
    rel="noopener noreferrer"
    class="group w-14 h-14 bg-blue-600 hover:bg-blue-700 text-white rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110"
    aria-label="Chat qua Messenger"
