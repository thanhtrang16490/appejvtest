  <!-- Phone -->
  <a 
    href="tel:+84351359520" 
    class="group w-14 h-14 bg-green-500 hover:bg-green-600 text-white rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 animate-bounce-slow"
