{
  "public": "dist",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/san-pham/**", "destination": "/san-pham/index.html" },
    { "source": "/gioi-thieu", "destination": "/gioi-thieu/index.html" },
    { "source": "/lien-he", "destination": "/lien-he/index.html" },
    { "source": "/test-3d", "destination": "/test-3d/index.html" }
  ],
  "headers": [
    {
      "source": "**/*.@(jpg|jpeg|gif|png|svg|ico|webp)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "**/*.@(js|css)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
